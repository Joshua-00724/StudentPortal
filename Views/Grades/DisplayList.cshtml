@{
}
@model List<StudentPortal.Models.Entities.Grade>
<div class="disp">
<h2>STUDENT SCORES</h2>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Sucess!</strong> @TempData["AlertMessage"]
    </div>
}

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>GRADE ID</th>
            <th>STUDENT ID</th>
            <th>COURSE ID</th>
            <th>SCORE(/100)</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.GradeID</td>
                <td>@grade.StudentID</td>
                <td>@grade.CourseID</td>
                <td>@grade.Score</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Grades" asp-action="EditList" asp-route-gid="@grade.GradeID">EDIT</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>