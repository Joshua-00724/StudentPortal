@{
}
@model List<StudentPortal.Models.Entities.Grade>
<div class="text-center">
<h1 class="display-5">Student Marks</h1>
</div>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Sucess!</strong> @TempData["AlertMessage"]
    </div>
}

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>Grade ID</th>
            <th>Student ID</th>
            <th>Course ID</th>
            <th>Marks</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.GID</td>
                <td>@grade.StudentID</td>
                <td>@grade.CourseID</td>
                <td>@grade.Score</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Grades" asp-action="EditList" asp-route-gid="@grade.GID">EDIT</a>
                </td>
            </tr>
        }
    </tbody>
</table>