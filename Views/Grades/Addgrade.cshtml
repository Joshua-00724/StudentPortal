@model StudentPortal.Models.AddGradeViewModel

<h1> Grade Students</h1>
<form class="row g-3" method="post">
    <div class="col-md-6">
        <label for="inputGrades" class="form-label">Grade ID</label>
        <input type="number" class="form-control" id="gid" asp-for="GID" required />
    </div>
    <div class="col-md-6">
        <label for="inputSID" class="form-label">Student ID</label>
        <input type="number" class="form-control" id="sid" asp-for="SID" required />
    </div>
    <div class="col-md-12">
        <label for="inputcid" class="form-label">Course ID</label>
        <input type="number" class="form-control" id="cid" asp-for="CourseID" required />
    </div>
    <div class="col-md-12">
        <label for="inputScore" class="form-label">Score</label>
        <input type="number" class="form-control" id="score" asp-for="Score" required />
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>