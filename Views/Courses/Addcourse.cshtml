@{
}
@model StudentPortal.Models.AddCourseViewModel

<h1>Add Course</h1>
<form class="row g-3" method="post">
    <div class="col-md-6">
        <label for="inputCourse" class="form-label">Course ID</label>
        <input type="number" class="form-control" id="sid" asp-for="CourseID" required/>
    </div>
    <div class="col-md-6">
        <label for="inputCourseName" class="form-label">Course Name</label>
        <input type="text" class="form-control" id="fname" asp-for="CourseName" required/>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
