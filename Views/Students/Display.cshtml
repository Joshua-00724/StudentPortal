@{
}
@model List<StudentPortal.Models.Entities.Student>
<h1>All Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>StudentID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Address</th>
            <th>B.O.D</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
             <td>@student.SID</td>
             <td>@student.FName</td>
             <td>@student.LName</td>
             <td>@student.Email</td>
             <td>@student.Gender</td>
             <td>@student.Phone</td>
             <td>@student.Address</td>
             <td>@student.BirthDate</td>
             <td>
                 <a class ="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-sid="@student.SID">EDIT</a>
             </td>
        </tr>
        }
    </tbody>
</table>