@model StudentPortal.Models.AddStudentViewModel
<h1>Add Student</h1>

@if(TempData["AlertMessage"] != null)
{
<div class="alert alert-success">
    <strong>Sucess!</strong> @TempData["AlertMessage"]
</div>
}
<form class="row g-3" method="post">
    <div class="col-md-6">
        <label for="inputName" class="form-label">Student ID</label>
        <input type="number" class="form-control" id="sid" asp-for="StudentID" required/>
    </div>
    <div class="col-md-6">
        <label for="inputFirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="fname" asp-for="FName" required/>
    </div>
    <div class="col-12">
        <label for="inputLastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="lname" asp-for="LName" required/>
    </div>
    <div class="col-12">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email Address</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="Email" asp-for="Email" required/>
        </div>
    </div>
    <p> </p>
    <fieldset class="row mb-3">
        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Gender" id="gridRadios1" value="Male" required>
                <label class="form-check-label" for="gridRadios1">
                    Male
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Gender" id="gridRadios2" value="Female" required>
                <label class="form-check-label" for="gridRadios2">
                    Female
                </label>
            </div>

        </div>
    </fieldset>
    <div class="col-md-6">
        <label for="inputPhone" class="form-label">Phone No.</label>
        <input type="number" class="form-control" id="phone" asp-for="Phone" required>
    </div>
    <div class="col-md-6">
        <label for="inputAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" asp-for="Address" required/>
    </div>
    <div class="col-md-12">
        <label for="inputBirth" class="form-label">Birth Date</label>
        <input type="date" class="form-control" id="indate" asp-for="BirthDate"required>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div> 
   

  <!-- Button trigger modal -->
    @*< button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Save</button> *@

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    The Record has been Saved
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
            </div>
        </div>
    </div>  
  </form>  
